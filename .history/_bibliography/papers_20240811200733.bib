@inproceedings{
    feng2023attackingbayes,
    title = {Attacking Bayes: Are Bayesian Neural Networks Inherently Robust?},
    author = {Yunzhen Feng and Tim G. J. Rudner and Nikolaos Tsilivis and Julia Kempe},
