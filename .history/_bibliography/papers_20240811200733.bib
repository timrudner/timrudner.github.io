@inproceedings{
    rudner2024uap,
    title = {Uncertainty-Aware Priors for Fine-Tuning Pre-trained Vision and Language Models},
    author = {Tim G. J. Rudner and Xiang Pan and Yucen Lily Li and Ravid Shwartz-Ziv and Andrew Gordon Wilson},
    booktitle = {ICML Workshop on Structured Probabilistic Inference & Generative Modeling},
